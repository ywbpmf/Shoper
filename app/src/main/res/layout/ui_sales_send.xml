<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <include layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_64"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sales_no_"
                />

            <EditText
                android:id="@+id/et_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/edit_height"
                android:background="@drawable/edit_bg"
                android:maxLines="1"
                android:maxLength="32"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/margin_1_2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ship_addr"
                />

            <EditText
                android:id="@+id/et_addr"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/edit_height"
                android:background="@drawable/edit_bg"
                android:maxLines="1"
                android:maxLength="32"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/margin_1_2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rec_men"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/edit_height"
                android:background="@drawable/edit_bg"
                android:maxLines="1"
                android:maxLength="32"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/margin_1_2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/con_phone"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/edit_height"
                android:background="@drawable/edit_bg"
                android:maxLines="1"
                android:maxLength="32"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/margin_1_2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_way"
                android:layout_marginTop="@dimen/dp_12"
                />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online_pay"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash_on_del"
                    />

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_46"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:background="@drawable/btn_bg"
                />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_marginLeft="@dimen/dp_24"
                android:background="@drawable/btn_bg"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>