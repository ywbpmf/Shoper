<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/margin"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/tv_billing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/text_title"
            />

        <View
            style="@style/Line_Style"
            android:layout_below="@id/tv_billing"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"
            />


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_below="@id/tv_billing"
            android:layout_alignLeft="@id/tv_billing"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/temp_goods"
            android:layout_marginTop="@dimen/margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/iv_icon"
            android:layout_alignBottom="@id/iv_icon"
            android:layout_toRightOf="@id/iv_icon"
            android:layout_marginLeft="@dimen/dp_24">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                />
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_orders_btn3"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orders_btn2"
            android:layout_alignTop="@id/iv_icon"
            android:layout_alignBottom="@id/iv_icon"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            />

        <View
            style="@style/Line_Style"
            android:layout_below="@id/iv_icon"
            android:layout_marginTop="@dimen/margin_1_2"
            android:layout_marginBottom="@dimen/margin_1_2"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_hint"
            android:textColor="@color/text_hint"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_icon"
            android:layout_marginTop="@dimen/margin"
            />

    </RelativeLayout>

    <View style="@style/Line_Style" />

</LinearLayout>