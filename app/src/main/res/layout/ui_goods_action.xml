<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/app_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/fl_goods_icon"
                    android:layout_width="@dimen/default_img_box_width"
                    android:layout_height="@dimen/default_img_box_width"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_1_2"
                    android:layout_marginBottom="@dimen/margin_1_2"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <ImageView
                        android:id="@+id/goods_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_img_box"
                        />

                    <LinearLayout
                        android:id="@+id/ll_add_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_img"
                            android:textSize="@dimen/text_min"
                            android:textColor="@color/text_white"
                            />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_bar_height"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:paddingRight="@dimen/margin"
                    android:layout_toRightOf="@id/fl_goods_icon"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_name"
                        android:textColor="@color/text_blank"
                        />

                    <EditText
                        android:id="@+id/et_goods_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="right|bottom"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/text_base"
                        android:background="@null"
                        />

                </LinearLayout>

                <View style="@style/Line_Style" android:layout_below="@id/ll_name" android:layout_toRightOf="@id/fl_goods_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_bar_height"
                    android:paddingRight="@dimen/margin"
                    android:layout_toRightOf="@id/fl_goods_icon"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_below="@id/ll_name"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_blank"
                        android:text="@string/goods_type"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_arrow_r"
                        android:gravity="right"
                        android:textColor="@color/text_blank"
                        android:hint="@string/p_choice"
                        />

                </LinearLayout>


            </RelativeLayout>

            <View style="@style/Line_Style" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/bar_code"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_bar_code"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style" android:layout_height="10dp"/>

            <RelativeLayout
                android:id="@+id/rl_unit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/unit"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/p_choice"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="right"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style"/>

            <RelativeLayout
                android:id="@+id/rl_jhj"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/stock_price"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/wholesale_price"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/retail_price"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/init_cost"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style" android:layout_height="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/stock"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_bar_height"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/safe_stock"
                    android:textColor="@color/text_blank"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_arrow_r"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_blank"
                    android:hint="@string/price_zero"
                    />

            </RelativeLayout>

            <View style="@style/Line_Style" android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desc_explain"
                    android:textColor="@color/text_blank"
                    android:layout_marginBottom="@dimen/margin_1_2"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="@dimen/dp_8"
                    android:textColor="@color/text_blank"
                    android:hint="@string/p_desc"
                    android:gravity="left|top"
                    android:background="@drawable/shape_box"
                    android:textSize="@dimen/text_hint"
                    android:maxLength="32"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>