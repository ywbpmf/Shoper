<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.gane.shoper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.premission.ACCESS_FRONT_CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:name=".app.ShoperApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.login.LoginActivity" android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.main.MainActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
        <activity android:name=".ui.ScanDecoderActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
        <activity android:label="@string/sales_ticket" android:name=".ui.sales.SalesOrdersActivity" android:screenOrientation="portrait"/>
        <activity android:label="@string/shop_manager" android:name=".ui.goods.GoodsActivity" android:screenOrientation="portrait"/>
        <activity android:label="@string/analyze" android:name=".ui.statistics.AnalyzeActivity" android:screenOrientation="portrait"/>
        <activity android:label="@string/add_goods" android:name=".ui.GoodsActionActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.billing.BillingActivity" android:label="@string/billing" android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ui.sales_return.SalesReturnActivity" android:label="@string/goods_return" android:screenOrientation="portrait"/>
        <activity android:name=".ui.sales_send.SalesSendActivity" android:label="@string/send_out" android:screenOrientation="portrait"/>
        <activity android:name=".ui.pay.PayChannelActivity" android:label="@string/orders_pay" android:screenOrientation="portrait" />



        <activity android:name=".ui.LandiActivity" />


        <activity android:name="com.landicorp.android.scan.scanDecoder.CaptureActivity"
            android:label="scan Decoder"
            android:configChanges="orientation|keyboardHidden" />
        <activity android:name="com.landicorp.android.scan.scanDecoder.SettingsActivity"/>

    </application>

</manifest>